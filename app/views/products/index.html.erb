<h1>Products</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Device</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th>Date expected</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= product.description %></td>
        <td><%= link_to product.device.name, product.device %></td>
        <td><%= link_to product.brand.name, product.brand %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= product.date_expected_at %></td>
        <td>
          <%= link_to edit_product_path(product) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
          <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
