<%= form_for(@user, url: { controller: :users }, html: { class: 'form-horizontal' }) do |f| %>
  <%= render partial: 'layouts/form_errors', locals: { the_thing: @user } %>

  <div class="form-group">
    <%= f.label :email, class: 'control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: 'control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <% if @user.is_a?(Customer) %>
    <div class="form-group">
      <%= f.label :billing_address, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_area :billing_address, rows: 4, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :shipping_address, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_area :shipping_address, rows: 4, class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <% if current_user.is_a?(Admin) %>
        <% # TODO: fix CSS om checkbox %>
    <div class="field">
      <%= f.label :active %><br>
      <%= f.check_box :active %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
