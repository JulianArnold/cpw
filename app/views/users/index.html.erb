<div class="page-header">
  <h1>Users</h1>
</div>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Type</th>
      <th>Active</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.email, user_path(user.id) %>
          <%= mail_to user.email do %>
            <span class="glyphicon glyphicon-envelope" aria-label="email"></span>
          <% end %>
         </td>
        <td><%= link_to user.full_name, user_path(user.id) %></td>
        <td><%= user.type %></td>
        <td><%= user.active %></td>
        <td>
          <%= link_to edit_user_path(user), class: 'btn btn-xs btn-warning' do %>
            <span class="glyphicon glyphicon-edit" aria-label="edit"></span>
          <% end %>
          <%= link_to user_path(user.id), class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash" aria-label="delete"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
</p>