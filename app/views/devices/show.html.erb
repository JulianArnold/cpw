<h1>Device: <%= @device.name %></h1>
<p>
  <strong>ID:</strong>
  <%= @device.id %>
</p>

<p>
  <strong>Brand:</strong>
  <%= link_to @device.brand.name, @device.brand %>
</p>

<table class="table table-bordered table-striped">
  <tr>
    <th>Product name</th>
  </tr>
  <% @device.products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_device_path(@device), class: 'btn btn-warning' %>
<%= link_to 'Show all Devices', devices_path, class: 'btn btn-default' %>

<h2>Images</h2>
<table class="table table-bordered table-striped">
  <tr>
    <td>Thumbnail:</td>
    <td><%= image_tag @device.image.url(:thumb) %></td>
  </tr>

  <tr>
    <td>Medium:</td>
    <td><%= image_tag @device.image.url(:medium) %></td>
  </tr>

  <tr>
    <td>Large:</td>
    <td><%= image_tag @device.image.url(:large) %></td>
  </tr>
</table>