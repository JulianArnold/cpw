<h1>Devices</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th colspan="2">Name</th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= image_tag device.image.url(:thumb) %></td>

        <td>
          <%= link_to device.name, device %>
          <span class="pull-right">
            <%= link_to edit_device_path(device) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
            <%= link_to device, method: :delete, data: { confirm: 'Are you sure?'} do %>
               <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
             <% end %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_device_path, class: 'btn btn-success' %>
