<%= form_for(@device, html: { class: 'form-horizontal' }) do |f| %>
  <div class="well">
     <%= render partial: 'layouts/form_errors', locals: { the_thing: @device } %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :brand_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.collection_select :brand_id, @brands, :id, :name, {}, { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image, class: 'form-control' %>
      </div>
    </div>


  </div>

  <p>
    <%= f.submit 'Save', class: 'btn btn-success' %>
    or
    <%= link_to 'Cancel', devices_url %>
  </p>
<% end %>
